generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
} 
model test{
  id       Int     @id @default(autoincrement())
  name     String?
}
model user {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  passsword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
  }

model product{
  id       Int    @id @default(autoincrement())
  Chocolates Int
  cookies cookies[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
model cookies{
  id   Int    @id @default(autoincrement())
  name String 
  Type String
  description String
  Image Images[]
  product product @relation(fields: [id] ,references: [id])
  cookiesP cookiesPrice[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model cookiesPrice{
  id       Int    @id @default(autoincrement())
  cId      Int
  Weight String
  Price Int
  cookies cookies @relation(fields: [cId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Images{
  id Int @id @default(autoincrement())
  ImageId Int
  image Bytes
  cookies cookies @relation(fields: [ImageId],references: [id])
}