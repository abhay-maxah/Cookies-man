generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
} 
model test{
  id       Int     @id @default(autoincrement())
  name     String?
}
model user {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  passsword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
}

model product{
  id       Int    @id @default(autoincrement())
  ProductType  ProductType 
  cookies cookies[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
model cookies{
  id   Int    @id @default(autoincrement())
  name String 
  CookiesType String
  ProductId Int
  addToCart Boolean
  product product @relation(fields: [ProductId] ,references: [id])
  Image Images[]
  cookiesP cookiesPrice[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model cookiesPrice{
  id       Int    @id @default(autoincrement())
  cId      Int
  Weight String
  Price Int
  cookies cookies @relation(fields: [cId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Images{
  id Int @id @default(autoincrement())
  fileName String?
  ImageId Int?
  image String
  cookies cookies? @relation(fields: [ImageId],references: [id])
}
// Enum to define product types (1 = Chocolate, 2 = Cookies)
enum ProductType {
  CHOCOLATE
  COOKIE
  DESSERTS
}